{
  "name": "root",
  "private": true,
  "nodemonConfig": {
    "watch": [
      "./mods/"
    ],
    "ext": "ts",
    "exec": "ts-node",
    "ignore": "**/*.d.ts"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "test": "cross-env NODE_ENV=dev nyc --reporter=lcov mocha -r ts-node/register mods/**/*.unit.test.ts --exit",
    "build": "lerna run build",
    "clean": "rimraf **/*/tsconfig.tsbuildinfo && rimraf **/*/dist && rimraf **/*/dist && rimraf **/*/node_modules && rimraf node_modules",
    "run-edgeport": "cross-env NODE_ENV=dev nodemon mods/edgeport/src/edgeport"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.2.0",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.0.0-canary.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0",
    "prettier-standard": "^16.3.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  }
}
